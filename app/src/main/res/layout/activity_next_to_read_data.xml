<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".googlespreadsheet.NextActivityToReadData">

    <TextView
        android:id="@+id/show_data_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/show_public_data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/go_back_to_write_activity_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Show public data" />

    <Button
        android:id="@+id/show_private_data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_data_text_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="178dp"
        android:layout_marginRight="8dp"
        android:text="Show private data"
        tools:ignore="UnknownId" />

    <Button
        android:id="@+id/go_back_to_write_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_private_data_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="Back" />

</RelativeLayout>