<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_label_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Token is: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_view_value_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_label_token"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        tools:text="token value" />


    <Button
        android:id="@+id/button_rest_api_playground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_value_token"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="@null"
        android:text="Play with REST api"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/button_ring_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_rest_api_playground"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:text="Ring alarm"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

</RelativeLayout>